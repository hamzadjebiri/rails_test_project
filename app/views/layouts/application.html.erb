<!DOCTYPE html>
<html>
  <head>
    <title>FirstRailsProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" id="logo" href="/">Alpha Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>

           <li class="nav-item">
            <%= link_to 'Bloggers' , users_path , class:"nav-link"%>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Articles
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% if logged_in? %>
                <%= link_to "Create new article" , new_article_path, class:"dropdown-item" %>
              <% end %>
              <li><a class="dropdown-item" href="/articles">View Articles</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
               Categories
             </a>
             <div class="dropdown-menu" aria-labelledby="navbarDropdown">
               <% if logged_in? && current_user.admin? %>
                 <%= link_to "Create new category", new_category_path, class: "dropdown-item" %>
               <% end %>  
               <%= link_to "View categories", categories_path, class: "dropdown-item" %>
             </div>
          </li>

        </ul>
         
          <% if logged_in? %>

            <li class="nav-item dropdown">
               <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= "(Admin)" if current_user.admin? %> Profile [<%= current_user.username %>]
               </a>
               <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                 <%= link_to "View your profile", user_path(current_user), class: "dropdown-item" %>
                 <%= link_to "Edit your profile", edit_user_path(current_user), class: "dropdown-item" %>
                 <%= link_to "Delete profile", user_path(current_user), class: "dropdown-item text-danger", method: :delete, data: { confirm: "Are you sure?" } %> 
               </div>
             </li>

            <li class="nav-item" style="margin-right: 2%">
               <%= link_to 'Logout', logout_path, class: "btn btn-danger btn-lg", method: :delete %>
            </li>

          <% else %>

             <li class="nav-item" style="margin-right: 2%">
              <%= link_to 'Log in', login_path, class: "btn btn-success btn-lg" %>
            </li>
             <%= link_to "Sign up" , signup_path , class:"btn btn-warning btn-lg" %>  

          <% end %>

      </div>
    </div>
    </nav>

    <div class="container">
      <%= render 'layouts/messages' %>
      <div class="row justify-content-md-center">
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
